def setcoords():
   

    xo=80
    yo=240
    xm=110
    ym=110

#generate list of midpoints
    s=[]

    for i in range(0,5):
        for j in range(0,5):
            x=xo + i*xm
            y=yo + j*ym
            pnt= (x,y)
            s.append(pnt)
            
    #print(s) 
    return s
